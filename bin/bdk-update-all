#!/bin/sh

if [ "${BDK_ROOT}" = "" ]
then
    echo "The BDK_ROOT environment variable is not set"
    exit 1
fi

TARGET=${BDK_ROOT}/target-bin

${BDK_ROOT}/bin/bdk-update-romfs ${BDK_ROOT}/target-bin/bdk-minimal.bin ${BDK_ROOT}/target-bin/bdk-minimal-no-romfs.bin ${BDK_ROOT}/rom/minimal/*
${BDK_ROOT}/bin/bdk-update-romfs ${BDK_ROOT}/target-bin/bdk-full.bin ${BDK_ROOT}/target-bin/bdk-full-no-romfs.bin ${BDK_ROOT}/rom/full/*

