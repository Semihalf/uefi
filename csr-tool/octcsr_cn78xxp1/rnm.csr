# -*- csr3 -*-
# You must run "csr3 rtl" after editing this file!
---
name: RNM
registers:
  - name: RNM_CTL_STATUS
    title: RNM Control and Status Register
    address: 0x1180040000000
    bus: RSL
    description: This register is the RNM interrupt-enable register.
    attributes:
      dv_fc_scratch: "ALL"
      exempt_w1c_w: "True"
    fields:
      - name: --
        bits: 63..12
        access: RAZ
        reset: --
        typical: --
        description: Reserved.

      - name: DIS_MAK
        bits: 11
        access: R/W1S/H
        reset: --
        typical: --
        description: Disable use of master AES KEY.

      - name: EER_LCK
        bits: 10
        access: RO/H
        reset: 0
        typical: 0
        description: Encryption enable register locked

      - name: EER_VAL
        bits: 9
        access: RO/H
        reset: 0
        typical: 0
        description: Dormant encryption key match

      - name: ENT_SEL
        bits: 8..5
        access: R/W
        reset: 0x0
        typical: 0x0
        description: |
          Select input to RNM FIFO.
          0x0 = 0-7 0x8 = 64-71
          0x1 = 8-15 0x9 = 72-79
          0x2 = 16-23 0xA = 80-87
          0x3 = 24-31 0xB = 88-95
          0x4 = 32-39 0xC = 96-103
          0x5 = 40-47 0xD = 104-111
          0x6 = 48-55 0xE = 112-119
          0x7 = 56-63 0xF = 120-127

      - name: EXP_ENT
        bits: 4
        access: R/W
        reset: 0
        typical: 0
        description: Exported entropy enable for random-number generator.

      - name: RNG_RST
        bits: 3
        access: R/W
        reset: 0
        typical: 0
        description: Reset RNG as core reset.

      - name: RNM_RST
        bits: 2
        access: R/W
        reset: 0
        typical: 0
        description: Reset the RNM as core reset except for register logic.

      - name: RNG_EN
        bits: 1
        access: R/W
        reset: 0
        typical: 1
        description: Enables the output of the RNG.

      - name: ENT_EN
        bits: 0
        access: R/W
        reset: 0
        typical: 1
        description: Entropy enable for random number generator.


  - name: RNM_BIST_STATUS
    title: RNM BIST Status Register
    address: 0x1180040000008
    bus: RSL
    description: This register is the RNM memory BIST status register, indicating status of built-in self-tests.
    attributes:
      dv_bist_all_fail_test: "ALL"
    fields:
      - name: --
        bits: 63..2
        access: RAZ
        reset: --
        typical: --
        description: Reserved.

      - name: RRC
        bits: 1
        access: RO/H
        reset: 0
        typical: 0
        description: |
          Status of the RRC memory block BIST: 1 = failed BIST, 0 = passed BIST

      - name: MEM
        bits: 0
        access: RO/H
        reset: 0
        typical: 0
        description: |
          Status of MEM block BIST: 1 = failed BIST, 0 = passed BIST


  - name: RNM_EER_KEY
    title: RNM Encryption Enable Register
    address: 0x1180040000010
    bus: RSL
    description: This register is the encryption enable register.
    fields:
      - name: KEY
        bits: 63..0
        access: WO
        reset: 0x0
        typical: 0x0
        description: |
          Dormant encryption key. If dormant crypto is fuse-enabled, crypto can be enabled by
          writing this register with the correct key.


  - name: RNM_EER_DBG
    title: RNM Encryption Enable Debug Register
    address: 0x1180040000018
    bus: RSL
    description: This register is the encryption enable debug register.
    fields:
      - name: DAT
        bits: 63..0
        access: RO/H
        reset: --
        typical: --
        description: Dormant encryption debug info.


  - name: RNM_SERIAL_NUM
    title: RNM Fuse Serial Number Register
    address: 0x1180040000020
    bus: RSL
    fields:
      - name: DAT
        bits: 63..0
        access: RO/H
        reset: --
        typical: --
        description: Dormant encryption serial number



